<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Herbal Blends App</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">

  <link rel="stylesheet" href="css/cart.css">
  <link rel="stylesheet" href="normalize.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;500&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


</head>

<body>

  <header>
    <nav class="navbar navbar-expand-md navbar-light shadow p-3 mb-5 rounded" fixed-top role="navigation">

      <!-- navbar brand / title -->
      <a class="navbar-brand" href="/">
        <img src="img/logo2.png" class="logo img-responsive" alt="logo that reads herbal blends">
      </a>

      <!-- toggle button for mobile nav -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav"
        aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse justify-content-end" id="main-nav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
          <li class="nav-item"><a class="nav-link" href="/identify">Herb Identifier </a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
          <li class="nav-item"><a class="nav-link" href="/login" class="btn btn-default">Login</a></li>
          <li class="nav-item"><a class="nav-link" href="/signup" class="btn btn-default">Signup</a></li>
        </ul>


      </div>


    </nav>

  </header>

  
  <section class="confirm">
  <h1>Confirm Your Order</h1>
  </section>
  
  <section class="order">
  <ul class="herbs">
    <% for(var i=0; i<cart.length; i++) {%>
      <li class="herb">
        <span><%= cart[i].base %></span>
        <span><%= cart[i].flavor %></span>
        <span><%= cart[i].support %></span>
        <span class="hide"><%= cart[i]._id %></span>
        <span>QTY: <%= cart[i].qty %></span>
        <span><i class="fas fa-plus-square qty" aria-hidden="true"></i></span>
        <span><i class="fas fa-minus-square qty" aria-hidden="true"></i></span>

        <span><i class="fa fa-trash" aria-hidden="true"></i></span>
      </li>
      <% } %>
  </ul>
</section>


<section class="button">
  <button type="submit" class="btn btn-lg" id="checkout">Checkout</button>
</section>

<footer class="text-center text-white" style="background-color: #f1f1f1;">
  <!-- Grid container -->
  <div class="container pt-4">
    <!-- Section: Social media -->
    <section class="mb-4">
      <!-- Facebook -->
      <a class="btn btn-link btn-floating btn-lg text-dark m-1" href="#!" role="button"
        data-mdb-ripple-color="dark"><i class="fab fa-facebook-f"></i></a>

      <!-- Twitter -->
      <a class="btn btn-link btn-floating btn-lg text-dark m-1" href="#!" role="button"
        data-mdb-ripple-color="dark"><i class="fab fa-twitter"></i></a>

      <!-- Google -->
      <a class="btn btn-link btn-floating btn-lg text-dark m-1" href="#!" role="button"
        data-mdb-ripple-color="dark"><i class="fab fa-google"></i></a>

      <!-- Instagram -->
      <a class="btn btn-link btn-floating btn-lg text-dark m-1" href="#!" role="button"
        data-mdb-ripple-color="dark"><i class="fab fa-instagram"></i></a>

    </section>
    <!-- Section: Social media -->
  </div>
  <!-- Grid container -->

  <!-- Copyright -->
  <div class="text-center text-dark p-3" style="background-color:  #f1f1f1;">
    Â© 2020 Copyright;
  </div>
</footer>


  <!-- form creates a fetch-->
  <script src="https://kit.fontawesome.com/8ea013bdc7.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="js/cart.js"></script>

</body>

</html>


