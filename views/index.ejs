          <%} else {%>
          <span><i class="far fa-heart liked" aria-hidden="true"></i></span> 
          <%}%> -->

          </li>
          <% } %>
      </ul>
    </section>
   

    <section class="orderItems">
      <ul class="herbs">
        <% for(var i=0; i<flavor.length; i++) {%>
