            <input type="radio" id="<%= flavor[i].name%>" name="flavor" value="<%= flavor[i].name%>">

            <span class="herbProp">
              <%= flavor[i].medicinalProp %>
            </span>
            <span class="herbPos">
              <%= flavor[i].component %>
            </span>
            <!-- <span><%= flavor[i].liked %></span>
        <span><i class="fas fa-heart" aria-hidden="true"></i></span> 
        <span><i class="far fa-heart" aria-hidden="true"></i></span>

        <% if(flavor[i].liked > 0){ %>
