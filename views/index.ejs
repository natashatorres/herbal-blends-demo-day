          <li class="herb">
            <span class="herbName">
              <a href="/plant?plantname=<%= base[i].name %>"><%= base[i].name %></a>
            </span>
            <input type="radio" id="<%= base[i].name%>" name="base" value="<%= base[i].name%>">

            <span class="herbProp">
              <%= base[i].medicinalProp %>
            </span>
            <span class="herbPos">
              <%= base[i].component %>
            </span>
            <!-- <span><%= base[i].liked %></span>
        <span><i class="fas fa-heart" aria-hidden="true"></i></span> 
        <span><i class="far fa-heart" aria-hidden="true"></i></span>

        <% if(base[i].liked > 0){ %>
