<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Herbal Blends App</title>
  <link rel="shortcut icon" href="favicon.ico">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- style sheets-->
  <link rel="stylesheet" href="css/profile.css">
  <link rel="stylesheet" href="css/normalize.css">
  <!-- font awesome -->
  <script src="https://kit.fontawesome.com/8ea013bdc7.js" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Caveat&family=Cedarville+Cursive&family=Montserrat:wght@200;300&family=Roboto:wght@100;300&display=swap"
    rel="stylesheet">
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-md navbar-light " fixed-top role="navigation">

      <!-- navbar brand / title -->
      <a class="navbar-brand" href="/">
        <img src="img/logo2.png" class="logo img-responsive" alt="logo that reads herbal blends">
      </a>

      <!-- toggle button for mobile nav -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav"
        aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

   
      <div class="collapse navbar-collapse justify-content-end" id="main-nav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/identify"><i class="fas fa-fingerprint"></i></a></li>
          <li class="nav-item"><a class="nav-link" href="/profile" class="btn btn-default" title="Herb Identification"><i class="fas fa-user-circle"></i></a></li>
          <li class="nav-item"><a class="nav-link" href="/logout" class="btn btn-default" title="Logout"><i class="fas fa-sign-out-alt"></i></a></li>
          <li class="nav-item"><a class="nav-link" href="/cart"><i class="fas fa-shopping-cart"></i></a></li>
        </ul>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="row gutters">
      <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
      <div class="card h-100 cardOne">
        <div class="card-body">
          <div class="account-settings">
            <div class="user-profile">
              <h6 class="user-email"><%= user.local.email %> </h6>

              <div class="user-avatar">
                <% if(user.local.img !== ""){ %>
                  <img src="<%=user.local.img %>" style="width:200px" class="profileImg">
                <% } else { %>
                  <img src="/img/main.png" style="width: 200px" class="profileImg">
                  <% } %>              
                </div>

             
              <form action="/imageUpload" method="POST" enctype="multipart/form-data">
                <div class="uploadImg">
                  <input type="file" id="image" name="file-to-upload" value="" class="profilePic" required>
                </div>
                <button type="submit" class="buttons btn-sm">UPLOAD</button>
              </form>
              
            </div>
          </div>
        </div>
      </div>
      </div>
      <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
      <div class="card h-100 cardTwo">
        <div class="card-body">
          <div class="row gutters">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
              <h6 class="mb-2 text-primary">Personal Details</h6>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="fullName">Full Name</label>
                <input type="text" class="form-control" id="fullName" placeholder="Enter full name">
              </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="eMail">Email</label>
                <input type="email" class="form-control" id="eMail" placeholder="Enter email ID">
              </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="phone">Phone</label>
                <input type="text" class="form-control" id="phone" placeholder="Enter phone number">
              </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="website">Website URL</label>
                <input type="url" class="form-control" id="website" placeholder="Website url">
              </div>
            </div>
          </div>
          <div class="row gutters">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
              <h6 class="mt-3 mb-2 text-primary">Address</h6>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="Street">Street</label>
                <input type="name" class="form-control" id="Street" placeholder="Enter Street">
              </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="ciTy">City</label>
                <input type="name" class="form-control" id="ciTy" placeholder="Enter City">
              </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="sTate">State</label>
                <input type="text" class="form-control" id="sTate" placeholder="Enter State">
              </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
              <div class="form-group">
                <label for="zIp">Zip Code</label>
                <input type="text" class="form-control" id="zIp" placeholder="Zip Code">
              </div>
            </div>
          </div>
          <div class="row gutters">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
              <div class="text-right formButtons">
                <button type="button" id="submit" name="submit" class="btn-sm buttons">Cancel</button>
                <button type="button" id="submit" name="submit" class="btn-sm buttons">Update</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
      </div>
      </div>


      <section id="hero" class="d-flex align-items-center">
        <div class="container mt-4">
          <div class="row">
            <div class="col-lg-6 pt-5 pt-lg-0 order-1 order-lg-1 d-flex flex-column justify-content-center">
              <div class="card h-100">
                <div class="card-body mt-2">
                  <ul class="messages">

                <% for(var i=0; i<pastOrders.length; i++) { const orderDetails=pastOrders[i].orders.map(order=> {
                  if(order.name){ return order.name
                  } else { return order.base + " " + order.flavor + " " + order.support }})%>
                  <li class="message">
                    <i class="fab fa-envira"></i>



                    <span>Purchased on: <%= pastOrders[i].orders[0].shortDate %></span>
                    <span>Qty: 
                      <%= pastOrders[i].qty %>
                    </span>
                    <span>
                      Total: $<%= pastOrders[i].priceTotal %>.00
                    </span>
                    <ul>
  
                      <% for(var j=0; j<orderDetails.length; j++) {%>
                        <li>
                          <span>
                            - <%= orderDetails[j] %>
                          </span>
                        </li>
                        <% } %>
                    </ul>
                  </li>
                  <% } %>
              </ul>
            </div>
          </div>
        </div>
            <div class="col-lg-6 order-2 order-lg-2 hero-img">
              <img src="img/herbs.png" class="img-fluid animated" alt="">
            </div>
          </div>
        </div>
    
      </section>
    
  



    <script src="index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>


</body>

</html>