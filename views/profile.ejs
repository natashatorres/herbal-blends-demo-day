<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Herbal Blends App</title>
  <link rel="shortcut icon" href="favicon.ico">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- style sheets-->
  <link rel="stylesheet" href="css/profile.css">
  <link rel="stylesheet" href="css/normalize.css">
  <!-- font awesome -->
  <script src="https://kit.fontawesome.com/8ea013bdc7.js" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Caveat&family=Cedarville+Cursive&family=Montserrat:wght@200;300&family=Roboto:wght@100;300&display=swap"
    rel="stylesheet">
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-md navbar-light" fixed-top role="navigation">

      <!-- navbar brand / title -->
      <a class="navbar-brand" href="/">
        <img src="img/logo2.png" class="logo img-responsive" alt="logo that reads herbal blends">
      </a>

      <!-- toggle button for mobile nav -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav"
        aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse justify-content-end" id="main-nav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
          <li class="nav-item"><a class="nav-link" href="/identify"><i class="fas fa-fingerprint"></i></a></li>
          <li class="nav-item"><a class="nav-link" href="/profile" class="btn btn-default"
              title="Herb Identification"><i class="fas fa-user-circle"></i></a></li>
          <li class="nav-item"><a class="nav-link" href="/cart"><i class="fas fa-shopping-cart"></i></a></li>
        </ul>
      </div>
    </nav>
  </header>

  <div class="container">

    <div class="page-header text-center">
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="position-sticky" style="top: 2rem;">
          <div class="p-4 mb-3 bg-light rounded">
            <h4 class="fst-italic">Profile</h4>

            <form action="/imageUpload" method="POST" enctype="multipart/form-data">

              <div class="uploadImg">
                <input type="file" id="image" name="image" value="" class="profilePic" required>
              </div>
              <button type="submit">UPLOAD</button>
            </form>
          </div>
        </div>
      </div>

      <div class="col-sm-6">
        <ul class="messages">
          <% for(var i=0; i<pastOrders.length; i++) { const orderDetails=pastOrders[i].orders.map(order=> {
            if(order.name){
            return order.name
            }else{
            return order.base + " " + order.flavor + " " + order.support
            }
            })

            %>
            <li class="message">
              <span>
                <%= pastOrders[i].date %>
              </span>
              <span>
                <%= pastOrders[i].qty %>
              </span>
              <span>
                <%= pastOrders[i].priceTotal %>
              </span>
              <ul>

                <% for(var j=0; j<orderDetails.length; j++) {%>
                  <li>
                    <span>
                      <%= orderDetails[j] %>
                    </span>
                  </li>
                  <% } %>
              </ul>
            </li>
            <% } %>
        </ul>



      </div>
    </div>
  </div>

    <footer class="footer mt-auto py-3 bg-light">
      <div class="container">
        <section class="mb-4 d-flex justify-content-center">
          <!-- Facebook -->
          <a class="btn btn-link btn-floating btn-lg text-dark m-1" href="#!" role="button"
            data-mdb-ripple-color="dark"><i class="fab fa-facebook-f"></i></a>

          <!-- Twitter -->
          <a class="btn btn-link btn-floating btn-lg text-dark m-1" href="#!" role="button"
            data-mdb-ripple-color="dark"><i class="fab fa-twitter"></i></a>

          <!-- Google -->
          <a class="btn btn-link btn-floating btn-lg text-dark m-1" href="#!" role="button"
            data-mdb-ripple-color="dark"><i class="fab fa-google"></i></a>

          <!-- Instagram -->
          <a class="btn btn-link btn-floating btn-lg text-dark m-1" href="#!" role="button"
            data-mdb-ripple-color="dark"><i class="fab fa-instagram"></i></a>

        </section>
      </div>
    </footer>



    <script src="index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>


</body>

</html>