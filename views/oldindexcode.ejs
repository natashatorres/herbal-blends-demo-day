
  <div class="container-xl">
    <form action="/cart" method="POST">
  
      <!-- base herbs -->
      <div class="row justify-content-center mt-3">
        <% for(var i=0; i<base.length; i++) {%>
          <div class="col-sm-3">
            <div class="card text-center" style="width: 18rem;height:25rem;">
              <label>
                <input type="radio" id="<%= base[i].name%>" name="base" value="<%= base[i].name%>">
                <img src="img/mugwort.png" class="base" alt="an image of dried herbs" width="200px">
              </label>
              <div class="card-body">
                  <span class="herbName">
                    <a href="/plant?plantname=<%= base[i].alternateNames[0]%>">
                      <%= base[i].name %>
                    </a>
                  </span>
                  <span class="herbProp">
                    <%= base[i].medicinalProp %>
                  </span>
                  <span class="herbPos">
                    <%= base[i].component %>
                  </span>
                  <span><button>Add to Blend</button> <button>Add to Cart</button></span>
              </div>
            </div>
          </div>
          <% } %>
      </div>
  
      <!-- flavor herbs -->
      <div class="row justify-content-center mt-3">
        <% for(var i=0; i<flavor.length; i++) {%>
          <div class="col-sm-3">
            <div class="card text-center" style="width: 18rem;height:25rem;">
              <label>
                <input type="radio" id="<%= flavor[i].name%>" name="flavor" value="<%= flavor[i].name%>">
                <img src="img/mint.png" class="flavor" width="200px">
              </label>
              <div class="card-body"> 
                  <span class="herbName card-text">
                    <a href="/plant?plantname=<%= flavor[i].alternateNames[0]%>" class="card-text">
                      <%= flavor[i].name %>
                    </a>
                  </span>
                  <span class="herbProp">
                    <%= flavor[i].medicinalProp %>
                  </span>
                  <span class="herbPos">
                    <%= flavor[i].component %>
                  </span>
              </div>
            </div>
          </div>
          <% } %>
      </div>
  
      <!-- support -->
      <div class="row justify-content-center mt-3">
        <% for(var i=0; i<base.length; i++) {%>
          <div class="col-sm-3">
            <div class="card text-center" style="width: 18rem;height:25rem;">
              <label>
                <input type="radio" id="<%= support[i].name%>" name="support" value="<%= support[i].name%>">
                <img src="img/skullCap.jpg" class="support">
              </label>
              <div class="card-body">
                  <span class="herbName">
                    <a href="/plant?plantname=<%= support[i].alternateNames %>">
                      <%= support[i].name %>
                    </a>
                  </span>
                  <span class="herbProp">
                    <%= support[i].medicinalProp %>
                  </span>
                  <span class="herbPos">
                    <%= support[i].component %>
                  </span>
              </div>
            </div>
          </div>
          <% } %>
      </div>
  
      <section class="button">
        <button type="submit" class="submitOrder btn-sm" style="width: 18rem;">ENTER</button>
      </section>
  
    </form>
  </div>



