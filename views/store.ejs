<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Herbal Blends App</title>
  <link rel="shortcut icon" href="favicon.ico">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- style sheets-->
  <link rel="stylesheet" href="css/store.css">
  <link rel="stylesheet" href="css/normalize.css">
  <!-- font awesome -->
  <script src="https://kit.fontawesome.com/8ea013bdc7.js" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Caveat&family=Cedarville+Cursive&family=Montserrat:wght@200;300&family=Roboto:wght@100;300&display=swap"
    rel="stylesheet">
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-md navbar-light " fixed-top role="navigation">

      <!-- navbar brand / title -->
      <a class="navbar-brand" href="/">
        <img src="img/logo2.png" class="logo img-responsive" alt="logo that reads herbal blends">
      </a>

      <!-- toggle button for mobile nav -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav"
        aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse justify-content-end" id="main-nav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
          <li class="nav-item"><a class="nav-link" href="/identify"><i class="fas fa-fingerprint"></i></a></li>
          <li class="nav-item"><a class="nav-link" href="/profile" class="btn btn-default"
              title="Herb Identification"><i class="fas fa-user-circle"></i></a></li>
          <li class="nav-item"><a class="nav-link" href="/cart"><i class="fas fa-shopping-cart"></i></a></li>
        </ul>
      </div>
    </nav>

    <div class="container mt-5 d-block">
      <div class="row justify-content-center">
        <h1 class="">All Herbs</h1>
        <p class="">Herbs and Pre-made Blends</p>
      </div>
    </div>

    <div class="container-xl">
      <% for(var i=0; i<specialblends.length; i++) {%>
        <div class="row mt-3">
          <form action="/cart" method="POST" class="">
            <div class="card text-center col-xxl-3 col-md-12" style="width: 18rem;height:34rem;">
              <img src="img/mint.png" class="pt-2" alt="an image of dried herbs" width="50px">

              <div class="card-body">
                <span class="herbName">
                  <a href="/">
                    <%= specialblends[i].name %>
                  </a>
                </span>
                <span class="herbProp">
                  <%= specialblends[i].base %>
                    <%= specialblends[i].flavor %>
                      <%= specialblends[i].support %>

                </span>
                <span class="herbProp cart-text">
                  <%= specialblends[i].medicinalProp %>
                </span>
                <label>
                  <input type="hidden" id="<%= specialblends[i].name%>" name="name" value="<%= specialblends[i].name%>">
                  <button type="submit" class="submitOrder"><i class="fas fa-plus"></i></button></span>
                </label>
              </div>
            </div>
        </div>
        </form>
        <% } %>
    </div>
   
    <div class="container-xl">
      <% for(var i=0; i<herbs.length; i++) {%>
        <div class="row mt-3">
          <form action="/cart" method="POST" class="">
            <div class="card text-center col-xxl-3 col-md-12" style="width: 18rem;height:25rem;">
              <img src="img/mugwort.png" class="pt-2" alt="an image of dried herbs" width="200px">

              <div class="card-body">
                <span class="herbName">
                  <a href="/plant?plantname=<%= herbs[i].alternateNames[0]%>">
                    <%= herbs[i].name %>
                  </a>
                </span>
          
                <span class="herbProp cart-text">
                  <%= herbs[i].medicinalProp %>
                </span>
                <label>
                  <input type="hidden" id="<%= herbs[i].name%>" name="name" value="<%= herbs[i].name%>">
                  <button type="submit" class="submitOrder"><i class="fas fa-plus"></i></button></span>
                </label>
              </div>
            </div>
        </div>
        </form>
        <% } %>
    </div>


    <footer class="footer mt-auto py-3 bg-light">
      <div class="container">
        <section class="mb-4 d-flex justify-content-center">
          <!-- Facebook -->
          <a class="btn btn-link btn-floating btn-lg text-dark m-1" href="#!" role="button"
            data-mdb-ripple-color="dark"><i class="fab fa-facebook-f"></i></a>

          <!-- Twitter -->
          <a class="btn btn-link btn-floating btn-lg text-dark m-1" href="#!" role="button"
            data-mdb-ripple-color="dark"><i class="fab fa-twitter"></i></a>

          <!-- Google -->
          <a class="btn btn-link btn-floating btn-lg text-dark m-1" href="#!" role="button"
            data-mdb-ripple-color="dark"><i class="fab fa-google"></i></a>

          <!-- Instagram -->
          <a class="btn btn-link btn-floating btn-lg text-dark m-1" href="#!" role="button"
            data-mdb-ripple-color="dark"><i class="fab fa-instagram"></i></a>

        </section>
      </div>
    </footer>



    <script src="index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>


</body>

</html>